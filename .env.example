# Yeast Agent Configuration
# Copy this file to .env and update with your Apollo details

# Apollo host (can be hostname or IP)
APOLLO_HOST=apollo.local

# Apollo SSH username
APOLLO_USER=jay

# Apollo SSH port
APOLLO_PORT=22

# Path to yeast-agent on apollo
AGENT_PATH=~/yeast-agent

# Ollama / RAG Settings
# If Ollama is remote and not exposed, use EMBEDDING_VIA_SSH=true
# If you have a local Ollama or tunnel, you can set OLLAMA_API_URL=http://localhost:11434
EMBEDDING_VIA_SSH=true
OLLAMA_API_URL=

# Extended Thinking & Realizations (Phase 5)
THINKING_BLOCKS_PER_QUERY=3
THINKING_MIN_DEPTH_TO_REALIZE=2
THINKING_STRICT_TAGS=true
THINKING_MEMORY_ENABLED=true
THINKING_REALIZATION_SALIENCY_MULT=0.9

# Outlines.dev Structured Output (Phase 5)
# Set to true to use schema-constrained generation via Outlines.dev
# Requires outlines-server.py running on apollo.local:6789
OUTLINES_ENABLED=true
OUTLINES_API=http://apollo.local:6789
